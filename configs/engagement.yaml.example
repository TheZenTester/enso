# ENSO Engagement Configuration
#
# SETUP: Copy this file to engagement.yaml and fill in your values:
#   cp engagement.yaml.example engagement.yaml
#
# Defines engagement type, directory layout, scope files, and network drops.

# Engagement type: 'simple' (single network) or 'complex' (multiple networks)
engagement_type: simple

# Root client directory for all engagement files
client_dir: /client

# Directory containing scope files (relative to client_dir)
scope_dir: engagement_docs

# Default network interface for all network drops
# If null/omitted, auto-detects the interface with the default gateway
interface: null

# ── Simple engagement settings ──────────────────────────────────────
# Used when engagement_type is 'simple' and no network_drops are defined.
simple:
  output_dir: internal                # Base output dir (relative to client_dir)
  scope_files:
    in_scope: client_inscope.txt             # Relative to scope_dir
    excluded: excluded.txt
    special: special_considerations.txt

# ── Complex engagement defaults ─────────────────────────────────────
# IMPORTANT: Default scope files inherited by ALL network drops.
# Drops can override any field individually.
# Set a field to "" to explicitly have no file for that drop.
# complex:
#   scope_files:
#     excluded: excluded.txt
#     special: special_considerations.txt

# ── Network drops ───────────────────────────────────────────────────
# For simple engagements: define one entry (or none to use simple defaults).
# For complex engagements: define multiple entries.
#
# Subnet can be specified in TWO formats:
#   - CIDR notation: subnet: "24" or subnet: "/24"
#   - Netmask format: netmask: "255.255.255.0"

network_drops:
  - name: "Corporate LAN"
    network_dir: "corporate_lan"      # Filesystem path (auto-generated from name if not set)
    static_ip: "10.0.0.100"
    subnet: "24"
    gateway: "10.0.0.1"
    dns:
      - "10.0.0.10"
    scope_files:
      in_scope: inscope.txt           # Relative to scope_dir

